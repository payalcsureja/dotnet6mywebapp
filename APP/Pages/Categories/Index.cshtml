@page
@model APP.Pages.Categories.Index
@{
    ViewData["Title"] = "Categories";
}



<div class="container">
    <div class="row">
        <div class="col-6"><h1>@ViewData["Title"]</h1></div>
        <div class="col-6"><a asp-page="create" class="btn btn-primary" >Create</a></div>
    </div>
    <div><hr/></div>
    @foreach (var cat in Model.Categories)
    {
        <div class="row">
            <div class="col-12">
                <div>Name:@cat.Name</div>
                <div>DisplayOrder:@cat.DisplayOrder</div>
                <div><a asp-page="edit" class="btn btn-primary" >Edit</a></div>
                <div><a asp-page="delete" class="btn btn-primary" >Delete</a></div>

                <br/>
            </div>
        </div>
    }
    
</div>
